<%- include('./partials/header.ejs') %>

<body>
  <%- include('./partials/navbar.ejs') %>

  <div class="container" id="formulario-pergunta">
    <div class="card">
      <div class="card-header">
        <h3>Realizar Pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/salvarpergunta">
          <label> Título </label>
          <input
            class="form-control"
            type="text"
            placeholder="Título"
            name="titulo"
          />
          <br />
          <label> Descrição </label>
          <textarea
            class="form-control"
            placeholder="Descreva sua pergunta aqui!"
            name="descricao"
          ></textarea>
          <br />
          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>

